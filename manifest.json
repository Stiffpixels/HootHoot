{
  "manifest_version": 3,
  "name": "HootHoot",
  "version": "1.0.0",
  "description": "This is your solution to finding a good movie to watch it randomly recommends you movies from top 500 hollywood and bollywood movies.",
  "icons": {
    "48": "/assets/icon-48.png",
    "128": "/assets/icon.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Movie Recommendations"
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "clipboardRead",
    "clipboardWrite",
    "cookies",
    "history",
    "idle",
    "management",
    "notifications",
    "topSites",
    "storage",
    "webNavigation",
    "webRequest",
    "nativeMessaging"
  ],
  "host_permissions": ["https://*/*"]
}
